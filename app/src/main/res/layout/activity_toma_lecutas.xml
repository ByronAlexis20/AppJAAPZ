<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".TomaLecutasActivity">


        <TextView
            android:id="@+id/tvCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="nombre cliente"
            android:layout_marginTop="20dp"
            android:textSize="13dp"
            android:textAlignment="center"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/tvBarrio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="barrio"
            android:layout_marginTop="10dp"
            android:textSize="12dp"
            android:textAlignment="center"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/tvLecturaAnterior"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="lectura anterior"
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            android:textAlignment="center"
            android:textColor="#000000"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="INGRESE LECTURA ACTUAL"
            android:layout_marginTop="30dp"
            android:textSize="12dp"
            android:textAlignment="center"
            android:textColor="#000000"/>

        <CheckBox
            android:id="@+id/chkValidar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="Validar lectura"
            android:layout_gravity="center" />

        <EditText
            android:id="@+id/etLecturaActual"
            android:layout_width="120dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:hint="LECT ACTUAL"
            android:layout_marginTop="10dp"
            android:textSize="12dp"
            android:inputType="number"
            android:textAlignment="center"
            android:textColor="#000000" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OBSERVACIONES"
            android:layout_marginTop="10dp"
            android:textSize="12dp"
            android:textAlignment="center"
            android:textColor="#000000"/>
        <EditText
            android:id="@+id/etObservaciones"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="18dp"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:hint="OBSERVACIONES"
            android:layout_marginTop="10dp"
            android:textSize="12dp"
            android:textAlignment="center"
            android:textColor="#000000" />
        <Button
            android:id="@+id/btnGrabar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Grabar"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>
        <TextView
            android:id="@+id/tvLatitud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginTop="20dp"
            android:textSize="13dp"
            android:textAlignment="center"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/tvLongitud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginTop="20dp"
            android:textSize="13dp"
            android:textAlignment="center"
            android:textColor="#000000"/>
    </LinearLayout>
</ScrollView>